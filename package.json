{
  "name": "git-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Git operations",
  "type": "module",
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "start": "node build/index.js",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --coverage tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest tests/integration"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "simple-git": "^3.20.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "typescript": "^5.0.0"
  }
}
