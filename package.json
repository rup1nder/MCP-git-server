{
  "name": "git-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Git operations",
  "type": "module",
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run --coverage tests/unit",
    "test:integration": "node tests/git-server.test.js",
    "test:ui": "vitest --ui",
    "start": "node build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "simple-git": "^3.20.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
